{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "types/**/*.ts",
    "src/**/*",
    "src/**/*.vue",
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
